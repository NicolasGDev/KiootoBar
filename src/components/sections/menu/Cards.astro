---
// Props que recibir√° el componente
const { imageSrc, title, price, description } = Astro.props;
---

<div
  class="relative flex w-full max-w-xs flex-col overflow-hidden rounded-lg mt-6 border bg-white shadow-md shadow-gray-400"
>
  <a class="relative mx-3 mt-3 flex h-60 overflow-hidden rounded-xl" href="#">
    <img class="object-fill w-full h-full" src={imageSrc} alt={title} />
  </a>
  <div class="mt-4 px-5 pb-5">
    <h5 class="text-xl tracking-tight text-main font-bold">{title}</h5>

    <div class="mt-4 mb-5 flex flex-col">
      <p class="mb-4 max-h-16 text-ellipsis">
        <span class="text-slate-900">{description}</span>
      </p>

      <p>
        <span class="text-3xl font-bold text-slate-900">{price}</span>
      </p>
    </div>
  </div>
</div>
